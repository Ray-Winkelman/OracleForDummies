@using Website.Models;

@functions {
    
    public static string GetCategoryName(int id)
    {
        return Category.ScalarWhereID<Category>(id).Title;
    }

    public static string TrimPostText(string post)
    {
        if (post.Length > 35)
        {
            return post.Substring(0, 32) + " ...";
        }

        return post;
    }
}

@if (ViewBag.Posts.Count > 0)
{
    <table class="u-full-width">
        <thead>
            <tr>
                <th>Title</th>
                <th>Content</th>
                <th>Category</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in ViewBag.Posts)
            {
                <tr>
                    <td>@post.Title</td>
                    <td>@TrimPostText(post.PostText)</td>
                    <td>@GetCategoryName(post.CategoryID)</td>
                    <td>@post.DatePosted.ToString("MMMM d, yyyy - h:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h6>Sorry. No posts contain that keyword.</h6>
}